---
bodyclass: front
title: Build Forms
sort-order: 02
menu-link: Forms
lead: Scaffold forms with JSON files.
---


<% if (features && features.length > 0 && features.indexOf('installExtendedLayout') != -1) { %>
{{#extend "tpl_default"}}
	{{#content "body"}}

		{{#forms.data}}
			{{partial "_article" }}
		{{/forms.data}}

		<form id="custom-form" class="validate-ui form-wrapper" action="" method="get">

			{{#each form--elements.data }}
				{{> _form }}
			{{! partials/components/forms/ }}
			{{/each}}

			<fieldset>
				<div class="form-row">
					<button class="cta-button">Send</button>
				</div>
			</fieldset>

		</form>

	{{/content}}
{{/extend}}
<% } else { %>
{{#forms.data}}
	{{partial "_article" }}
{{/forms.data}}

<form id="custom-form" class="validate-ui form-wrapper" action="" method="get">

	{{#each form--elements.data }}
		{{> _form }}
	{{! partials/components/forms/ }}
	{{/each}}

	<fieldset>
		<div class="form-row">
			<button class="cta-button">Send</button>
		</div>
	</fieldset>

</form>
<% } %>
