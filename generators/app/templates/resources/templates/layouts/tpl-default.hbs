<!DOCTYPE html>
<!--[if lt IE 7]>      <html lang="en" class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html lang="en" class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html lang="en" class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<% if (modules && modules.length > 0 && modules.indexOf('grunt-version') != -1) { %>
{{> b-version }}
<% } %>
<html lang="en" class="no-js"> <!--<![endif]-->

<head>
	<% if (features && features.length > 0 && features.indexOf('installExtendedLayout') != -1) { %>
	{{#block "metadata"}}
		{{> _metadata }}
	{{/block}}
	{{#block "styles"}}
		{{> _styles }}
	{{/block}}
	<% } else { %>
	{{> _metadata }}
	{{> _styles }}
	<% } %>
</head>

<body class="<% if (features && features.length > 0 && features.indexOf('installDemoContent') != -1) { %>{{ bodyclass }}<% } %>">
	<% if (features && features.length > 0 && features.indexOf('installDemoContent') != -1) { %>

	<div id="site-wrapper">
		<div class="canvas" id="site-canvas">

			<!-- Header
			================================================== -->
			<header class="b-header">
				<div class="container header__container">
					{{partial "b-nav-toggler" }}
					{{partial "b-logo" }}
				</div>
			</header>

			<% if (features && features.length > 0 && features.indexOf('installExtendedLayout') != -1) { %>
			{{#block "nav"}}
				<!-- Navbar
				================================================== -->
				{{> b-nav }}
			{{/block}}
			<% } else { %>
			{{> b-nav }}
			<% } %>

			<!-- Stage
			================================================== -->
			<section class="b-stage">
				<div class="container stage__container">
					<h1 class="stage__head"> {{{ title }}} </h1>

					<h2 class="stage__lead">{{{ lead }}}</h2>
				</div>
			</section>

			<!-- Content
			================================================== -->
			<main class="b-main" id="main">
				<div class="container main__container">
					<aside class="b-sidebar is-right">
						<% if (features && features.length > 0 && features.indexOf('installExtendedLayout') != -1) { %>
						{{#block "sidebar-right"}}
							{{> b-sidebar-right }}
						{{/block}}
						<% } else { %>
						{{> b-sidebar-right }}
						<% } %>
					</aside>
					<% if (features && features.length > 0 && features.indexOf('installExtendedLayout') != -1) { %>
					{{#block "body"}}
						{{> body }}
					{{/block}}
					<% } else { %>
					{{> body }}
					<% } %>
				</div>
			</main>

			<!-- Footer
			================================================== -->
			<footer class="b-footer">
				<div class="container footer__container">
					<% if (features && features.length > 0 && features.indexOf('installExtendedLayout') != -1) { %>
					{{#block "footer"}}
						{{> b-footer }}
					{{/block}}
					<% } else { %>
					{{> b-footer }}
					<% } %>
				</div>
			</footer>

		</div>
	</div>
	<% } else { %> <% if (features && features.length > 0 && features.indexOf('installExtendedLayout') != -1) { %>
	{{#block "body"}}
		{{> body }}
	{{/block}}
	<% } else { %>
	{{> body }}
	<% } %> <% } %>
	<% if (jsLibs && jsLibs.length > 0 || features && features.length > 0 && features.indexOf('installDemoContent') != -1) { %>
	<!-- Scripts
	================================================== -->
	<% if (features && features.length > 0 && features.indexOf('installExtendedLayout') != -1) { %>
	{{#block "scripts"}}
		{{> _scripts }}
	{{/block}}
	<% } else { %>
	{{> _scripts }}
	<% } %><% } %>
</body>
</html>