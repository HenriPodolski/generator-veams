var config = require('../config');
var gulp = require('gulp');
<% if (gulpModules && gulpModules.indexOf('gulp-requirejs-optimize') == -1 || gulpModules && gulpModules.indexOf('browserify') == -1) { %>
// Copy js files
gulp.task('copy:js', function (cb) {
	return gulp.src(config.options.paths.src + '/js/*.js')
		.pipe(gulp.dest(config.options.paths.dev + '/js'));
});<% } %>

// Copy ajax files
gulp.task('copy:ajax', function (cb) {
	return gulp.src(config.options.paths.src + '/ajax/**/*')
		.pipe(gulp.dest(config.options.paths.dev + '/ajax'));
});

// Copy assets files
gulp.task('copy:assets', function (cb) {
	return gulp.src(config.options.paths.src + '/assets/**/*')
		.pipe(gulp.dest(config.options.paths.dev + '/'));
});
<% if (features && features.indexOf('createDevFolder') != -1) { %>
// Copy dev files to dist
gulp.task('copy:dist', function (cb) {
	return gulp.src(config.options.paths.dev + '/**/*')
		.pipe(gulp.dest(config.options.paths.dist + '/'));
});<% } %>