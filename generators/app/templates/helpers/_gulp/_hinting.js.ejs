var config = require('../config');
var path = config.options.paths;
var gulp = require('gulp');
var htmlhint = require('gulp-htmlhint');<% if (gulpModules && gulpModules.indexOf('gulp-jshint') !== -1) { %>
var jshint = require('gulp-jshint');
var stylish = require('jshint-stylish');<% } %>

// HTML Hinting Task
gulp.task('hint:html', function () {
	return gulp.src(path.dev + '/*.html')
		.pipe(htmlhint({ // Want to know what configurations are available? http://htmlhint.com/
				force: true,
				'attr-lowercase': true,
				'attr-value-double-quotes': false,
				'attr-value-not-empty': true,
				'doctype-first': true,
				'doctype-html5': true,
				'id-class-value': true,
				'id-unique': true,
				'img-alt-require': true,
				'spec-char-escape': true,
				'src-not-empty': true,
				'style-disabled': true,
				'tag-pair': true,
				'tag-self-close': true,
				'tagname-lowercase': true
			}
		))
		.pipe(htmlhint.reporter());
});
<% if (gulpModules && gulpModules.indexOf('gulp-jshint') !== -1) { %>
// JS Hinting Task
gulp.task('hint:js', function () {
	return gulp.src(path.src + '/js/**/*.js')
		.pipe(jshint())
		.pipe(jshint.reporter(stylish));
});<% } %>