var config = require('../config');
var gulp = require('gulp');
var htmlhint = require('gulp-htmlhint');
var jshint = require('gulp-jshint');
var stylish = require('jshint-stylish');

// HTML Hinting Task
gulp.task('html-hint', function () {
	return gulp.src(config.options.paths.dev + '/*.html')
		.pipe(htmlhint({ // Want to know what configurations are available? http://htmlhint.com/
				force: true,
				'attr-lowercase': true,
				'attr-value-double-quotes': false,
				'attr-value-not-empty': true,
				'doctype-first': true,
				'doctype-html5': true,
				'id-class-value': true,
				'id-unique': true,
				'img-alt-require': true,
				'spec-char-escape': true,
				'src-not-empty': true,
				'style-disabled': true,
				'tag-pair': true,
				'tag-self-close': true,
				'tagname-lowercase': true
			}
		))
		.pipe(htmlhint.reporter());
});

// JS Hinting Task
gulp.task('js-hint', function () {
	return gulp.src(config.options.paths.src + '/js/**/*.js')
		.pipe(jshint())
		.pipe(jshint.reporter(stylish));
});